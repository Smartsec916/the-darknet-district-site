entrypoint = "index.html"
modules = ["nodejs-20", "python-3.11", "web"]
run = "echo 'This is a static site'"

[nix]
channel = "stable-24_11"
packages = ["file", "rename", "static-web-server", "unixtools.xxd"]

[deployment]
publicDir = "/"
deploymentTarget = "static"
run = ["sh", "-c", ""]

# Rewrite rules to remove .html extensions
[[deployment.rewrites]]
from = "/about"
to = "/about.html"

[[deployment.rewrites]]
from = "/games-list"
to = "/games-list.html"

[[deployment.rewrites]]
from = "/store-first-page"
to = "/store-first-page.html"

[[deployment.rewrites]]
from = "/store-apparel"
to = "/store-apparel.html"

[[deployment.rewrites]]
from = "/store-books"
to = "/store-books.html"

[[deployment.rewrites]]
from = "/store-electronics"
to = "/store-electronics.html"

[[deployment.rewrites]]
from = "/store-survival"
to = "/store-survival.html"

[[deployment.rewrites]]
from = "/store-apps"
to = "/store-apps.html"

[[deployment.rewrites]]
from = "/sleeping_pod"
to = "/sleeping_pod.html"

[[deployment.rewrites]]
from = "/chatbot"
to = "/chatbot.html"

[[deployment.rewrites]]
from = "/blackout-protocol"
to = "/blackout-protocol/index.html"

[[deployment.responseHeaders]]
path = "/*"
name = "X-Frame-Options"
value = "SAMEORIGIN"

[[deployment.responseHeaders]]
path = "/*"
name = "X-Content-Type-Options"
value = "nosniff"

[[deployment.responseHeaders]]
path = "/*"
name = "Referrer-Policy"
value = "strict-origin-when-cross-origin"

[[deployment.responseHeaders]]
path = "/*"
name = "Permissions-Policy"
value = "geolocation=(), camera=(), microphone=()"

[workflows]
runButton = "Serve static site"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
echo \"Serving HTML, open the Preview to see your output.
To see changes you make, you can hit the refresh button in the preview, you do \u001B[1mnot\u001B[0m have to stop and run again.
Console logs are available in the Preview devtools or your browser devtools.\" && static-web-server -w ./.config/static-web-server.toml
"""
waitForPort = 80

[[workflows.workflow]]
name = "Chat Server"
author = 40752925
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"

[[workflows.workflow]]
name = "Serve static site"
author = 40752925
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "static-web-server -w ./.config/static-web-server.toml"

[[ports]]
localPort = 80
externalPort = 80

[agent]
expertMode = true
